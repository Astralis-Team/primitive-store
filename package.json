{
	"name": "@astralis-team/primitive-store",
	"version": "1.0.0",
	"description": "native store",
	"author": {
		"name": "Astralis Taem ðŸŒš",
		"url": "https://github.com/Astralis-Team"
	},
	"license": "MIT",
	"homepage": "https://github.com/Astralis-Team/primitive-store",
	"repository": {
		"url": "https://github.com/Astralis-Team/primitive-store"
	},
	"bugs": {
		"url": "https://github.com/Astralis-Team/primitive-store/issues"
	},
	"keywords": [
		"fetch",
		"instance"
	],
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": false,
	"exports": {
		"types": "./dist/types/index.d.ts",
		"import": "./dist/esm/index.mjs",
		"require": "./dist/cjs/index.cjs"
	},
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"prepublishOnly": "npm run type && npm run build",
		"build": "shx rm -rf dist && vite build",
		"lint": "eslint . --fix",
		"lint-inspector": "npx @eslint/config-inspector",
		"type": "tsc --noEmit",
		"format": "prettier --write .",
		"pretty": "npm run type && npm run lint && npm run format"
	},
	"devDependencies": {
		"shx": "^0.4.0",
		"typescript": "^5.8.3",
		"vite": "^7.0.0",
		"vite-plugin-dts": "^4.5.4"
	},
	"lint-staged": {
		"*.js": [
			"prettier --write",
			"eslint --fix"
		],
		"*.ts": [
			"prettier --write",
			"eslint --fix"
		]
	}
}
